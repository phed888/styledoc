v-red = #ff0000
v-form-element-border = #999999

.test {
	width percentage(5 / 7)
	color v-red
	display flex
}
.select-style
	border 1px solid v-form-element-border
	width 160px
	border-radius: 3px
	overflow hidden
	position relative
	&:hover
		border-color blue
		border-width 2px
		top -1px
		left -1px
	select
		font-size 14px
		padding 5px 8px
		width 130%
		border none
		box-shadow none
		background transparent
		background-image none
		-webkit-appearance none
.select-widget
	width 16px
	height 10px
	position absolute
	top 12px
	right 7px
.ui-elements
	display none