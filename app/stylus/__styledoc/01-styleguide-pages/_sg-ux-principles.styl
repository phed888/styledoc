@import "jeet";

.principle
	col(3/12, gutter: 1)
	background-color $white
	margin-top 20px
	img
		height auto
		max-width 100%
	//&:nth-child(3)
	//	margin-right 0
	.principles-slideshow
		width 100%
		height 300px
		background: url(../../images/prin1-trustworthy-experiences.jpg) no-repeat top center;
		-webkit-background-size cover
		-moz-background-size cover
		-o-background-size cover
		background-size cover
		background-position-y -100px
	.principles-text
		background-color $white
		margin-top -5px
		padding 20px
		h1
			display inline-block
			font-family 'Roboto', sans-serif;
			font-size 20px
			font-weight bold
			line-height 22px
			padding 10px 0 20px
			position relative
		p
			color rgba(0, 0, 0, 1 )
			font-size 14px
			line-height 19px

.principle-grid
	display flex
	align-items stretch

.slider-container

	.slides-container
		.slide
			.image
				width: 100%
				height 500px
			&.slide-1
				.image
					background: url(../../images/prin1-trustworthy-experiences.jpg) no-repeat top center;
					background-position-y 0
					background-size cover
			&.slide-2
				.image
					background: url(../../images/prin2-intuitive-interactions.jpg) no-repeat top center;
					background-position-y -60px
					background-size cover
					background-color #73ABD3
			&.slide-3
				.image
					background: url(../../images/prin3-users-are-humans.jpg) no-repeat top center;
					background-position-y -60px
					background-size cover
			&.slide-4
				.image
					background: url(../../images/prin4-simple-designs.jpg) no-repeat top center;
					background-position-y 0
					background-size cover
			&.slide-5
				.image
					background: url(../../images/prin5-design-for-users.jpg) no-repeat top center;
					background-position-y 0
					background-size cover
			.text
				col(12/14, offset: 1/14)
				padding 20px 0
				position relative
				&:after, &:before
					font-family Icons
					font-size 18px
					font-weight normal
					position absolute
					top 30px
				&:after
					content '\e025'
					right -40px
				&:before
					content '\e060'
					left -40px

				h1
					display inline-block
					font-family 'Roboto', sans-serif;
					font-size 24px
					font-weight bold
					line-height 22px
					padding 10px 0
					position relative
				p
					color rgba(0, 0, 0, 1 )
					font-size 18px
					line-height 23px


